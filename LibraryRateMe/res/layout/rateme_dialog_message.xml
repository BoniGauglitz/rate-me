<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/rateme_default_padding"
    android:layout_margin="@dimen/rateme_default_padding"
    tools:background="#77FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:background="#FF0000" >

        <ImageView
            android:id="@+id/app_icon_dialog_rating"
            android:layout_width="@dimen/rateme_icon_size"
            android:layout_height="@dimen/rateme_icon_size"
            android:scaleType="centerInside"
            android:padding="@dimen/rateme_small_padding"
            tools:background="#FFFF00"
            android:contentDescription="@string/rateme_icon_content_description"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:background="#00FF00" >

            <TextView
                android:id="@+id/rating_dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rateme_text_size"
                android:text="@string/rateme_message" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/rateme_default_padding"
                android:isIndicator="false"
                android:numStars="5"
                android:rotationX="0.3"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:stepSize="0.5"
                android:layout_gravity="center"
                tools:background="#0000FF" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonRateMe"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/rateme_text_size"
            android:text="@string/rateme" />

        <Button
            android:id="@+id/buttonThanks"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/rateme_text_size"
            android:text="@string/rateme_no_thanks" />
    </LinearLayout>
</LinearLayout>
